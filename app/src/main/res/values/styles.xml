<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>

    <!-- Launcher -->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#74b9ff</item>
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>

    <!-- Toolbar -->
    <style name="AppTheme.Toolbar" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <!-- Dark Action Bar -->
    <style name="AppTheme.ActionBar.Dark" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>

        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>

    <!-- No Action Bar -->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowActivityTransitions">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Transparent Status Bar -->
    <style name="AppTheme.Transparent.StatusBar" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Button -->
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Card View -->
    <style name="AppTheme.MaterialCard" parent="Theme.MaterialComponents.Light">
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
    </style>

    <!-- Tab Layout -->
    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabIndicatorColor">@color/colorBrown</item>
        <item name="tabMode">scrollable</item>
        <item name="tabSelectedTextColor">@color/colorWhite</item>
        <item name="tabRippleColor">@color/colorTransparent</item>
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
    </style>

    <!-- Tab Layout Text Appearance -->
    <style name="TabLayoutTextAppearance">
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textSize">16sp</item>

        <item name="textAllCaps">false</item>
    </style>

    <!-- Pop Up Dialog -->
    <style name="AppTheme.BasePopUp" parent="Base.Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/FadeAnimation</item>

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>

        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.PopUp.Light" parent="AppTheme.BasePopUp">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.PopUp.Dark" parent="AppTheme.BasePopUp">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.PopUp.Slide" parent="AppTheme.BasePopUp">
        <item name="android:windowAnimationStyle">@style/SlideAnimation</item>
    </style>

    <style name="AppTheme.Sheet" parent="Base.Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>

        <item name="android:windowAnimationStyle">@style/FadeAnimation</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>

        <item name="android:fontFamily">@font/proxima_nova_regular</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.Sheet.Slide" parent="AppTheme.Sheet">
        <item name="android:windowAnimationStyle">@style/SlideAnimation</item>
    </style>

    <!-- Item Clickable -->
    <style name="CircularItemClickable">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ItemClickable">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- Pop Up Animation Style -->
    <style name="FadeAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
    </style>

    <style name="SlideAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>